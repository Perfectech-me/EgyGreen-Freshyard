<odoo>

        <template id="print_cib_cheque_temp">
<div t-attf-class="header " t-att-style="report_header_style">
            <t t-set="o" t-value="o.with_context(lang=lang)"/>
            <div dir="rtl">
                <div style="float:left;text-align:left;font-size:14px;width:100%;padding-left:45px;padding-top:10px;">
                    <span t-esc="o.cheque_date"/>
                </div>
                <div style="float:right;text-align:right;padding-right:60px;width:100%;padding-top:10px;" name="payee">
                    <span t-field="o.beneficiary_name"/>
                </div>


                <div style="float:right;text-align:right;width:32%;padding-top:30px;">
                    <span t-field="o.amount" style="float:right;text-align:right;"/>
                </div>


                <div style="float:left;text-align:right;font-size:11px;width:68%;padding-top:30px;padding-right:20px;">

                    <span class="font-weight-bold">فقط:</span>
                    <span class="font-weight-bold" t-esc="o.num_to_words_ar(o.amount)"/>
                    <span class="font-weight-bold">لاغير</span>

                </div>


                <div style="float:right;text-align:right;width:100%;padding-top:8px;">


                    <br/>

                    <span style="float:left;text-align:right;padding-left:150px;padding-top:10px;">غير قابل للتظهير
                    </span>

                </div>


            </div>


        </div>


    </template>







    <template id="print_cib_cheque">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="account_cheque.print_cib_cheque_temp" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>