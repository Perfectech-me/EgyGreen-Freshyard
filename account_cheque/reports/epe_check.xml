<odoo>
    <template id="print_epe_cheque_temp">
         <div t-attf-class="header " t-att-style="report_header_style">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                    <div  dir="rtl">
                        <div  style="float:right;text-align:right;padding-right:23px;font-size:14px;width:100%;">
                            <span t-esc="o.cheque_date"/>
                        </div>
                        <div style="float:right;text-align:right;padding-right:80px;width:100%;" name="payee">
                            <br/>
                            <span t-field="o.payee_user_id"/>
                        </div>

                        <div class="col text-right" style="padding-right:100px;font-size:11px;width:100%;">
                          <br/>
                            <span class="font-weight-bold">فقط: </span>
                            <span class="font-weight-bold" t-esc="o.num_to_words_ar(o.amount)"/>
                            <span class="font-weight-bold"> لاغير</span>

                        </div>

                        <div style="float:right;text-align:right;width:100%;padding-top:11px;">
                            <span t-field="o.amount" style="float:right;text-align:right;"/>
                        </div>

                        <div style="float:right;text-align:right;width:100%;padding-right:30px;padding-top:20px;">

                            <span style="float:right;text-align:right;">أحمد يحيي حنفى أحمد</span>
                        </div>

                    </div>


            </div>


    </template>
    <template id="print_epe_cheque">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="account_cheque.print_epe_cheque_temp" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>