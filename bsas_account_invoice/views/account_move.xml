<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="form_view_account_move_inherit" model="ir.ui.view">
            <field name="name">name.account.move.inherit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@id='header_right_group']" position="inside">
                    <field name="bl_awb" required="1"/>
                    <field name="inspection1_partner_id"/>
                    <field name="inspection2_partner_id"/>
                    <field name="insurance_customer_id"/>
                    <label for="other_cost"/>

                    <div>
                        <field name="other_cost" class="oe_inline"/>
                        -
                        <field name="other_cost_partner_id" class="oe_inline"/>
                    </div>
                    <field name="form13number"/>
                    <field name="form13date"/>
                    <field name="form13amount"/>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']//tree//field[@name='name']" position="after">
                    <field name="is_storable" invisible="1"/>
                    <field name="container_equipment_number" attrs="{'required':[('is_storable','=',True)]}"/>
                </xpath>


                <xpath expr="//field[@name='line_ids']//tree//field[@name='name']" position="after">
                    <field name="container_equipment_number" invisible="1"/>
                    <field name="is_storable" invisible="1"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>