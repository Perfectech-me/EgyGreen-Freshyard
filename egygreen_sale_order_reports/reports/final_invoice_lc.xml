<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="action_report_invoice_lc" model="ir.actions.report">
            <field name="name">FINAL INVOICE LC</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">egygreen_sale_order_reports.report_invoice_lc_template</field>
            <field name="report_file">egygreen_sale_order_reports.report_invoice_lc_template</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="paperformat_id"
                   ref="egygreen_sale_order_reports.paperformat_print_sale_order_proforma_invoice"/>
        </record>


        <template id="report_invoice_lc_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div class="header" style="margin-top:0px;width:100%;">
                            <div style="width:30%;float:left;text-align:left">
                                <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)"
                                     style="max-height: 80px;"/>
                            </div>
                        </div>

                        <div class="page">
                            <div class="row">
                                <div class="col-6">
                                    <div style="width:100%">
                                        <div>
                                            <div class="row">
                                                <div class="col-auto">
                                                    <strong>Date:</strong>
                                                    <span t-field="o.invoice_date"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-auto">
                                                    <strong>Sales Order No:</strong>
                                                    <span t-field="o.sales_order_id"/>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-auto">
                                                    <strong>Final Invoice No:</strong>
                                                    <span t-field="o.name"/>
                                                </div>
                                            </div>
                                        <div class="row">
                                            <div class="col-auto">
                                                <strong>Vat:</strong>
                                                <span t-field="o.company_id.vat"/>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-auto">
                                                <strong>Email:</strong>
                                                <span t-field="o.company_id.email"/>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-auto">
                                                <strong>Website:</strong>
                                                <span t-field="o.company_id.website"/>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6 text-right">
                                    <div>
                                        <div class="row">
                                            <div class="col-auto">
                                                <strong>Exporter/Shipper:</strong>
                                                <span t-field="o.company_id.name"/>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-auto">
                                                <strong>Trademark Certificate (Brand):</strong>
                                                <span t-field="o.company_id.name"/>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-auto">
                                                <strong>Address:</strong>
                                                <span t-field="o.company_id.street"/>
                                                <t t-if="o.company_id.street2">
                                                    ,
                                                    <span t-field="o.company_id.street2"/>
                                                </t>
                                                <t t-if="o.company_id.city">
                                                    ,
                                                    <span t-field="o.company_id.city"/>
                                                </t>
                                                <t t-if="o.company_id.state_id">
                                                    ,
                                                    <span t-field="o.company_id.state_id.name"/>
                                                </t>
                                                <t t-if="o.company_id.country_id">
                                                    ,
                                                    <span t-field="o.company_id.country_id.name"/>
                                                </t>
                                            </div>
                                        </div>
                                         <div class="row">
                                            <div class="col-auto">
                                                <strong>Mobile:</strong>
                                                <span t-field="o.company_id.mobile"/>
                                            </div>
                                        </div>
                                         <div class="row">
                                            <div class="col-auto">
                                                <strong>phone:</strong>
                                                <span t-field="o.company_id.phone"/>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <table style="width:100%;border-width:1px;border-color:black;font-size:12px;"
                                   class="table table-sm table-bordered oe_inline">
                                <t t-set="total_qty" t-value="0"/>

                                <tr style="background-color:#c2d6d6;">
                                    <td
                                            style="background-color:#1f2a54;color:white;text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong>Bill To</strong>
                                    </td>
                                    <td
                                            style="background-color:#1f2a54;color:white;text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong>Consignee</strong>
                                    </td>
                                    <td
                                            style="background-color:#1f2a54; color:white;text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong>Notify</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:25%;">
                                        <span t-field="o.partner_id"/>,
                                        <span t-field="o.partner_id.street"/>
                                        <t t-if="o.partner_id.street2">
                                            ,
                                            <span t-field="o.partner_id.street2"/>
                                        </t>
                                        <t t-if="o.partner_id.city">
                                            ,
                                            <span t-field="o.partner_id.city"/>
                                        </t>
                                        <t t-if="o.partner_id.state_id">
                                            ,
                                            <span t-field="o.partner_id.state_id"/>
                                        </t>
                                        <t t-if="o.partner_id.state_id">
                                            ,
                                            <span t-field="o.partner_id.country_id"/>
                                        </t>
                                        <t t-if="o.partner_id.state_id">
                                            ,
                                            <span t-field="o.partner_id.continent"/>
                                        </t>
                                    </td>
                                    <td
                                            style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:25%;">
                                        <t t-foreach="o.sales_order_id.partner_consignee_ids" t-as="cons">
                                            <span t-field="cons.street"/>
                                            <t t-if="cons.street2">
                                                <span t-field="cons.street2"/>
                                            </t>
                                            <t t-if="cons.city">
                                                ,
                                                <span t-field="cons.city"/>
                                            </t>
                                            <t t-if="cons.state_id">
                                                ,
                                                <span t-field="cons.state_id"/>
                                            </t>
                                            <t t-if="cons.country_id">
                                                ,
                                                <span t-field="cons.country_id"/>
                                            </t>
                                            <t t-if="cons.continent">
                                                ,
                                                <span t-field="cons.continent"/>
                                            </t>
                                        </t>
                                    </td>
                                    <td
                                            style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:25%;">
                                        <t t-foreach="o.sales_order_id.partner_notify_ids" t-as="notify">

                                            <span t-field="notify.street"/>
                                            <t t-if="notify.street2">
                                                ,
                                                <span t-field="notify.street2"/>
                                            </t>
                                            <t t-if="notify.city">
                                                ,
                                                <span t-field="notify.city"/>
                                            </t>
                                            <t t-if="notify.state_id">
                                                ,
                                                <span t-field="notify.state_id"/>
                                            </t>
                                            <t t-if="notify.country_id">
                                                ,
                                                <span t-field="notify.country_id"/>
                                            </t>
                                            <t t-if="notify.continent">
                                                ,
                                                <span t-field="notify.continent"/>
                                            </t>
                                        </t>
                                    </td>
                                </tr>
                                <br/>
                            </table>

                            <table style="width:100%;border-width:1px;border-color:black;font-size:12px;"
                                   class="table table-sm table-bordered oe_inline">
                                <tr>
                                    <td
                                            style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            Customer PO:
                                        </strong>
                                        <td
                                                style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:25%;">
                                            <t t-foreach="o.sales_order_id.notify_partner_line" t-as="line_notify">
                                                <t t-if="line_notify.notify_po">
                                                    <span t-field="line_notify.notify_po"/>,
                                                </t>
                                            </t>

                                        </td>
                                    </td>
                                    <td
                                            style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            Consignee PO:
                                        </strong>
                                        <td
                                                style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:25%;">
                                            <t t-foreach="o.sales_order_id.consignee_partner_line" t-as="line_cons">

                                                <span t-field="line_cons.consignee_po"/>

                                            </t>

                                        </td>
                                    </td>
                                </tr>
                            </table>

                            <table style="width:100%;border-width:1px;border-color:black;font-size:12px;"
                                   class="table table-sm table-bordered oe_inline">
                                <tr>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            Incoterm:
                                        </strong>
                                    </td>
                                    <td colspan="1"
                                        style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:25%;">
                                        <span t-field="o.invoice_incoterm_id"/>
                                    </td>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            Final Destination:
                                        </strong>
                                    </td>
                                    <td colspan="1"
                                        style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:25%;">
                                        <span t-field="o.partner_id.country_id"/>
                                    </td>

                                </tr>
                                <tr>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            Country of Origin:
                                        </strong>
                                    </td>
                                    <td colspan="1"
                                        style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:25%;">
                                        <span t-field="o.sales_order_id.origin_country_id"/>
                                    </td>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            Port of Discharge:
                                        </strong>
                                    </td>
                                    <td colspan="1"
                                        style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:25%;">
                                        <span t-field="o.sales_order_id.discharge_city_id"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            Port of Loading:
                                        </strong>
                                    </td>
                                    <td colspan="1"
                                        style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:25%;">
                                        <span t-field="o.sales_order_id.port_loading_id"/>
                                    </td>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            Number of Pallets:
                                        </strong>
                                    </td>
                                    <td colspan="1"
                                        style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:25%;">
                                        <span t-field="o.no_of_pallets"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            Shipping Line:
                                        </strong>
                                    </td>
                                    <td colspan="1"
                                        style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:25%;">
                                        <span t-field="o.sales_order_id.shipment_line_id"/>
                                    </td>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            Data Logger:
                                        </strong>
                                    </td>
                                    <td colspan="1"
                                        style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:25%;">
                                        <span t-field="o.data_loger"/>
                                    </td>
                                </tr>
                            </table>

                            <table style="width:100%;border-width:1px;border-color:black;font-size:12px;"
                                   class="table table-sm table-bordered oe_inline">
                                <tr>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            HS Code
                                        </strong>
                                    </td>
                                    <td
                                            style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:15%;">
                                        <span t-field="o.hs_code"/>
                                    </td>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                            IP Date
                                        </strong>
                                    </td>
                                    <td
                                            style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:15%;">
                                        <!--                                            <span t-field="o.o.final_destination_country_id"/>-->
                                    </td>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                            LC Date
                                        </strong>
                                    </td>
                                    <td
                                            style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:15%;">
                                        <span t-field="o.lc_date"/>
                                    </td>

                                </tr>
                                <tr>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            LC Number
                                        </strong>
                                    </td>
                                    <td
                                            style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:15%;">
                                        <span t-field="o.lc_no"/>
                                    </td>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                            IP Number
                                        </strong>
                                    </td>
                                    <td
                                            style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:15%;">
                                        <span t-field="o.ip_number"/>
                                    </td>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                            IRC Number
                                        </strong>
                                    </td>
                                    <td
                                            style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:15%;">
                                        <span t-field="o.irc_no"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            LCAF Number
                                        </strong>
                                    </td>
                                    <td
                                            style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:15%;">
                                        <span t-field="o.irc_no"/>
                                    </td>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                            Partial Shipments
                                        </strong>
                                    </td>
                                    <td
                                            style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:15%;">
                                        <span t-field="o.partial_shipments"/>
                                    </td>
                                    <td style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:15%;">
                                            Transshipment
                                        </strong>
                                    </td>
                                    <td
                                            style="text-align:left;border-width:1px;border-color:black;font-size:15px;width:15%;">
                                        <span t-field="o.transshipment"/>
                                    </td>
                                </tr>

                            </table>

                            <table style="width:100%;border-width:1px;border-color:black;font-size:12px;"
                                   class="table table-sm table-bordered oe_inline">
                                <tr>
                                    <td colspan="2"
                                        style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            Container / Equipment No:
                                        </strong>
                                        <td colspan="6"
                                            style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            <span t-field="o.container_equipment_number"/>
                                        </td>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2"
                                        style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            BL/AWB No:
                                        </strong>
                                        <td colspan="6"
                                            style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            <span t-esc="o.bl_awb"/>
                                        </td>
                                    </td>
                                </tr>
                            </table>

                            <t t-set="total_net_weight" t-value="0"/>
                            <t t-set="total_gross_weight" t-value="0"/>
                            <table style="width:100%;border-width:1px;border-color:black;font-size:12px;"
                                   class="table table-sm table-bordered oe_inline">
                                <t t-set="total_qty" t-value="0"/>

                                <tr style="background-color:#c2d6d6;">
                                    <td
                                            style="background-color:#1f2a54;color:white;text-align:left;border-width:1px;border-color:black;font-size:13px;width:55%;">
                                        <strong>Item</strong>
                                    </td>
                                    <td
                                            style="background-color:#1f2a54;color:white;text-align:left;border-width:1px;border-color:black;font-size:13px;width:2.5%;">
                                        <strong>N.W</strong>
                                    </td>
                                    <td
                                            style="background-color:#1f2a54; color:white;text-align:left;border-width:1px;border-color:black;font-size:13px;width:2.5%;">
                                        <strong>G.W</strong>
                                    </td>
                                    <td
                                            style="background-color:#1f2a54;color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong>Qty</strong>
                                    </td>
                                    <td
                                            style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong>Total N.W
                                        </strong>
                                    </td>
                                    <td
                                            style="background-color:#1f2a54;color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong>Total G.W</strong>
                                    </td>
                                    <td
                                            style="background-color:#1f2a54; color:white;text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong>Price</strong>
                                    </td>
                                    <td
                                            style="background-color:#1f2a54; color:white; text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                        <strong>Amount</strong>
                                    </td>
                                </tr>

                                <tr t-foreach="o.invoice_line_ids" t-as="line">
                                    <t t-if="not line.product_id.additional_service">

                                        <td
                                                style="text-align:left;border-width:1px;border-color:black;font-size:11px;width:55%;">
                                            <span t-field="line.product_id"/>
                                        </td>
                                        <td
                                                style="text-align:left;border-width:1px;border-color:black;font-size:13px;width:20%;">
                                            <t t-foreach="line.sale_line_ids" t-as="sale_line">
                                                <span t-field="sale_line.net_weight_per_unit"/>
                                            </t>
