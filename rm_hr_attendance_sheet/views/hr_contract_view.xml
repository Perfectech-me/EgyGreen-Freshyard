<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="hr_contract_form" model="ir.ui.view">
            <field name="name">hr.contract.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_payroll.hr_contract_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='structure_type_id']" position="after">
                    <field name="att_policy_id" required="1"/>
                </xpath>
                <xpath expr="//group[@name='top_info_left']" position="inside">
                    <field name="shifts_line_id" string="working Shift"/>
                </xpath>

            </field>
        </record>

    <record id="resource_calendar_form_custom" model="ir.ui.view">
        <field name="name">resource_calendar_form_custom</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="hr_payroll.payroll_resource_calendar_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='is_fulltime']" position="before">
                <field name="planned_hour"/>
                <field name="is_flexable"/>
            </xpath>

        </field>
    </record>

</odoo>


